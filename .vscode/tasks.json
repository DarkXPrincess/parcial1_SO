{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (g++)",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "src/Main.cpp",
        "src/FCFS.cpp",
        "src/MLQ.cpp",
        "src/RR.cpp",
        "-I", "include",
        "-o", "build/app.exe"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
